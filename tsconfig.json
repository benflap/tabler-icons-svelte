{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "lib": ["es2022"],
        "module": "es2022",
        "target": "es2022",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    }
}
